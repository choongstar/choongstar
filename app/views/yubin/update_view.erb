<div class="container">
<h1>CHOONGWON.com</h1>
<h3>World best email site</h3>
<form action ="/update_real/<%= @one_post.id %>" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail">보내는이</label>
    <input name="from" type="email" class="form-control" value="<%= @one_post.from %>" id="exampleInputEmail3" placeholder="누가">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail">받는이</label>
    <input name="email" type="email" class="form-control" value="<%= @one_post.who %>" id="exampleInputEmail2" placeholder="누구에게">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">글제목</label>
    <input name="title" type="text" class="form-control" value="<%= @one_post.title %>" id="exampleInputEmail1" placeholder="제목을 써주세요">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">내용</label>
    
    <textarea name="content" class="form-control" rows="5" id="comment" placeholder="글을 입력해주세요"><%= @one_post.content %></textarea>
  </div>
 
  <button type="submit" class="btn btn-default">수정</button>
</form>
</div>